{
  "name": "torrpeddo",
  "version": "1.0.0",
  "description": "![Torrpeddo Banner](assets/banner.png)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder --win --portable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elibaba/Torrpeddo.git"
  },
  "keywords": [],
  "author": "elibaba",
  "license": "ISC",
  "build": {
    "appId": "com.torrpeddo.app",
    "productName": "Torrpeddo",
    "win": {
      "target": "portable"
    },
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "backend/bridge.py"
    ]
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  }
}